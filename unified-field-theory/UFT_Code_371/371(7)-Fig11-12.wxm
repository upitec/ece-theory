/* [wxMaxima: input   start ] */
depends([psi],r);
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
assume(r>0, L>0, L_Z>0, h_bar>0, alpha>0);
/* [wxMaxima: input   end   ] */

/* [wxMaxima: section start ]
Lagrange equations II
   [wxMaxima: section end   ] */

/* [wxMaxima: subsect start ]
r equation
   [wxMaxima: subsect end   ] */

/* [wxMaxima: input   start ] */
a: alpha/(1-epsilon^2);
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
E11: diff(psi,r,2)+2/r*diff(psi,r) = -L^2/(h_bar*alpha)*(2/r-1/a)*psi;
/* [wxMaxima: input   end   ] */

/* [wxMaxima: section start ]
Prepare solution
   [wxMaxima: section end   ] */

/* [wxMaxima: input   start ] */
GC: solve(E11, diff(psi,r,2));
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
transform(Eq) := (A: ratsubst(psi_d, diff(psi,r), Eq),
    ratsubst(psi_dd, diff(psi,r,2), A)
)$
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
G1: transform(GC[1]);
/* [wxMaxima: input   end   ] */

/* [wxMaxima: section start ]
Solution 1
   [wxMaxima: section end   ] */

/* [wxMaxima: input   start ] */
str: [alpha=1, epsilon=0.5, h_bar=1, L=1];
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
Eq1: gfactor(ev(rhs(G1), str, eval));
Eq2: psi_d;
/* [wxMaxima: input   end   ] */

/* [wxMaxima: input   start ] */
s: rk([Eq1, Eq2],
    [psi_d, psi],
    [0., 1.], [r,0.001,6,0.01])$
/* [wxMaxima: input   end   ] */

/* [wxMaxima: subsect start ]
Graphics
   [wxMaxima: subsect end   ] */

